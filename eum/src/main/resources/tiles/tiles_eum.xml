<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
  "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>

  <!-- ===== 공통 레이아웃 =====
       template: 실제 레이아웃 JSP (헤더/사이드/본문/푸터 위치 잡아둔 틀) -->
  <definition name="baseLayout" template="/WEB-INF/views/common/layout.jsp">
    <put-attribute name="title"  value="EuM:" />
    <put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />
    <put-attribute name="side"   value="/WEB-INF/views/common/side.jsp" />
    <put-attribute name="body"   value="" />
    <put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp" />
  </definition>

  <!-- ===== 사이드 없는 레이아웃(로그인/단일 폼 등) =====
       /WEB-INF/views/common/empty.jsp 는 내용 없는 빈 파일 하나 만들어 두세요. -->
  <definition name="baseLayoutNoSide" extends="baseLayout">
    <put-attribute name="side" value="/WEB-INF/views/common/empty.jsp" />
  </definition>

  <!-- ===== 메인 페이지 ===== -->
  <definition name="main" extends="baseLayout">
    <put-attribute name="title" value="메인 • EuM:" />
    <put-attribute name="body"  value="/WEB-INF/views/main.jsp" />
  </definition>

  <!-- ===== 회원 관련 예시 (필요한 것만 남겨 쓰세요) ===== -->
  <definition name="loginForm" extends="baseLayoutNoSide">
    <put-attribute name="title" value="로그인 • EuM:" />
    <put-attribute name="body"  value="/WEB-INF/views/member/loginForm.jsp" />
  </definition>

  <definition name="memberForm" extends="baseLayoutNoSide">
    <put-attribute name="title" value="회원가입 • EuM:" />
    <put-attribute name="body"  value="/WEB-INF/views/member/memberForm.jsp" />
  </definition>

  <definition name="memberList" extends="baseLayout">
    <put-attribute name="title" value="회원 목록 • EuM:" />
    <put-attribute name="body"  value="/WEB-INF/views/member/listMembers.jsp" />
  </definition>

  <!-- ===== 오류 화면(선택) ===== -->
  <definition name="error.404" extends="baseLayoutNoSide">
    <put-attribute name="title" value="페이지를 찾을 수 없습니다 • EuM:" />
    <put-attribute name="body"  value="/WEB-INF/views/error/404.jsp" />
  </definition>

  <definition name="error.500" extends="baseLayoutNoSide">
    <put-attribute name="title" value="서버 오류 • EuM:" />
    <put-attribute name="body"  value="/WEB-INF/views/error/500.jsp" />
  </definition>

  <!--
    패턴 정의를 쓰고 싶다면(선택):
    컨트롤러에서 "something.page" 같은 이름을 반환했을 때
    /WEB-INF/views/something.jsp 를 바디로 꽂아주는 템플릿입니다.
    <definition name="*.page" extends="baseLayout">
      <put-attribute name="body" value="/WEB-INF/views/{1}.jsp"/>
    </definition>
  -->
</tiles-definitions>
