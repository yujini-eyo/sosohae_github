<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
  "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>

  <!-- baseLayout 는 tiles_main.xml 등에 이미 있음(레이아웃 JSP) -->
  <definition name="/chat/chat" extends="baseLayout">
    <put-attribute name="title" value="채팅방" />
    <!-- chat.jsp 위치를 너가 만든 경로와 일치시켜야 함 -->
    <put-attribute name="body" value="/WEB-INF/views/chat/chat.jsp" />
    <!-- header/footer가 baseLayout에서 이미 넣는 구조면 여기선 생략 -->
  </definition>

</tiles-definitions>