<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
  "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

  <!-- 전역 레이아웃: views 루트에 있는 layout.jsp / header.jsp / footer.jsp 사용 -->
  <definition name="layout.base" template="/WEB-INF/views/write/layout.jsp">
    <put-attribute name="title"   value="소소한 도움"/>
    <put-attribute name="head"    value=""/>
    <put-attribute name="header"  value="/WEB-INF/views/write/header.jsp"/>
    <put-attribute name="footer"  value="/WEB-INF/views/footer.jsp"/>
    <put-attribute name="body"    value=""/>
    <put-attribute name="scripts" value=""/>
  </definition>

  <!-- 글 목록 화면: 실제 JSP는 /WEB-INF/views/write/write.jsp -->
  <definition name="write/list" extends="layout.base">
    <put-attribute name="title" value="도움 매칭 게시판 | 소소한 도움"/>
    <put-attribute name="body"  value="/WEB-INF/views/write/write.jsp"/>
  </definition>

  <!-- (선택) 글쓰기 폼이 아직 없으면 목록으로 임시 연결 -->
  <definition name="write/form" extends="layout.base">
    <put-attribute name="title" value="글쓰기 | 소소한 도움"/>
    <put-attribute name="body"  value="/WEB-INF/views/write/write.jsp"/>
  </definition>

  <!-- (선택) 과거 return "write" 호환용 별칭 -->
  <definition name="write" extends="layout.base">
    <put-attribute name="title" value="도움 매칭 게시판 | 소소한 도움"/>
    <put-attribute name="body"  value="/WEB-INF/views/write/write.jsp"/>
  </definition>

</tiles-definitions>
