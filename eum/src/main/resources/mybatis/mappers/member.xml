<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.member">

  <!-- VO 매핑 -->
  <resultMap id="memResult" type="com.myspring.eum.member.vo.MemberVO">
    <result property="id" column="id" />
    <result property="password" column="password" />
    <result property="name" column="name" />
    <result property="email" column="email" />
    <result property="address" column="address" />
    <result property="age" column="age" />
    <result property="birth" column="birth" />
    <result property="phone" column="phone" />
    <result property="code" column="code" />
    <result property="notes" column="notes" />
    <result property="createdAt" column="created_at" />
  </resultMap>

  <!-- 전체 회원 조회 -->
  <select id="selectAllMemberList" resultMap="memResult">
    <![CDATA[
      SELECT * 
      FROM member
      ORDER BY created_at DESC
    ]]>
  </select>

  <!-- 회원 등록 -->
  <insert id="insertMember" parameterType="com.myspring.eum.member.vo.MemberVO">
    <![CDATA[
      INSERT INTO member (id, `password`, name, email, address, age, birth, phone, code, notes)
      VALUES (#{id}, #{password}, #{name}, #{email}, #{address}, #{age}, #{birth}, #{phone}, #{code}, #{notes})
    ]]>
  </insert>

  <!-- 회원 수정 -->
  <update id="updateMember" parameterType="com.myspring.eum.member.vo.MemberVO">
    <![CDATA[
      UPDATE member
      SET `password` = #{password},
          name = #{name},
          email = #{email},
          address = #{address},
          age = #{age},
          birth = #{birth},
          phone = #{phone},
          code = #{code},
          notes = #{notes}
      WHERE id = #{id}
    ]]>
  </update>

  <!-- 회원 삭제 -->
  <delete id="deleteMember" parameterType="String">
    <![CDATA[
      DELETE FROM member
      WHERE id = #{_parameter}
    ]]>
  </delete>

  <!-- 로그인 -->
  <select id="loginById" parameterType="com.myspring.eum.member.vo.MemberVO" resultType="com.myspring.eum.member.vo.MemberVO">
    <![CDATA[
      SELECT * 
      FROM member
      WHERE id = #{id}
        AND `password` = #{password}
    ]]>
  </select>

</mapper>